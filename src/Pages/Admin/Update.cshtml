
@page
@using ContosoCrafts.WebSite.Components
@model UpdateModel
@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>



@if (Model.error != null)
{
    <h2>@Model.error</h2>
}
else
{
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label>ID</label>
            <input class="form-control" type="text" asp-for="Product.Id" readonly>
        </div>
        <div class="form-group">
            <label>Region</label>
            <input class="form-control" type="text" asp-for="Product.Region" readonly>
        </div>
        <div class="form-group">
            <label>Image</label>
            <input class="form-control" type="text" asp-for="Product.Image">
        </div>
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" asp-for="Product.Title">
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" asp-for="Product.Description"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Product.Rating" class="control-label"></label>
            <div class="form-check">
                <input asp-for="Product.Rating" type="radio" value=@Data.Product_Rating.AVOID>
                <label class="form-check-label" for="gridRadios1">
                    AVOID
                </label>
            </div>
            <div class="form-check">
                <input asp-for="Product.Rating" type="radio" value=@Data.Product_Rating.GOOD_ALTERNATIVE>
                <label class="form-check-label" for="gridRadios2">
                    GOOD ALTERNATIVES
                </label>
            </div>
            <div class="form-check">
                <input asp-for="Product.Rating" type="radio" value=@Data.Product_Rating.BEST_CHOICE>
                <label class="form-check-label" for="gridRadios3">
                    BEST CHOICES
                </label>
            </div>
        </div>
        <input class="btn btn-primary" type="submit" id="Submit">
    }
}








