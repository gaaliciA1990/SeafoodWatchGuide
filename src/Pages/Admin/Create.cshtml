@page
@using ContosoCrafts.WebSite.Components
@model CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create a New Record</h1>

@if (Model.error != null)
{
    <h2>@Model.error</h2>
}
else
{
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label>ID</label>
            <input class="form-control" type="text" asp-for="Product.Id">
        </div>
        <div class="form-group">
            <label>Region</label>
            <input class="form-control" type="text" asp-for="Product.Region">
        </div>
        <div class="form-group">
            <label>Image</label>
            <input class="form-control" type="text" asp-for="Product.Image">
        </div>
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" asp-for="Product.Title">
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" asp-for="Product.Description"></textarea>
        </div>
        <div class="form-group">
            <label>Rating</label>
            <input class="form-control" type="text" asp-for="Product.Rating">
        </div>
        <input class="btn btn-primary" type="submit" id="Submit">
    }
}
