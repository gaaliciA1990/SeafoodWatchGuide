@page
@using ContosoCrafts.WebSite.Components
@using ContosoCrafts.WebSite.Models;
@using ContosoCrafts.WebSite.Data
@model CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create a New Record</h1>


    <!--This is the form for entering the data for a new Seafood Record. All fields are editable except for Product ID-->
    @using (Html.BeginForm())
    {
        <div asp-validation-summary="All"></div>

        <div class="form-group">
            <label>ID</label>

            <input class="form-control" type="text" asp-for="Product.Id" value="@System.Guid.NewGuid().ToString()" readonly>
        </div>

        <div class="form-group">
            <label>Region</label>
            <!-- Automatically parse from already available list of regions supported-->
            @{
                var temp = Model.ProductService.GetAllRegions();

                foreach (string region in temp)
                {
                    <div class="form-check">
                        <input asp-for="Product.Region" type="radio" value="@region">
                        <label class="form-check-label">
                            @region
                        </label>
                    </div>
                }
            }
            <span asp-validation-for="Product.Region" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label>Image</label>
            <input class="form-control" type="url" pattern="https://.*" size="30" required asp-for="Product.Image" />

            <span asp-validation-for="Product.Image" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" asp-for="Product.Title" value="">
            <span asp-validation-for="Product.Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Description</label>
            <input class="form-control" type="text" asp-for="Product.Description" value="">
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Fish Rating</label>
            @{
                var rating = Enum.GetValues(typeof(ProductRating));

                foreach (int i in rating)
                {
                    <div class="form-check">
                        <input asp-for="Product.Rating" type="radio" value="@i">
                        <label class="form-check-label" for="gridRadios1">
                            @ProductModel.covertToString((ProductRating) i)
                        </label>
                    </div>
                }
            }
            <span asp-validation-for="Product.Rating" class="text-danger"></span>
        </div>

        <input class="btn btn-primary" type="submit" id="Submit">
    }