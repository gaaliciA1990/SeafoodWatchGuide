@page
@using ContosoCrafts.WebSite.Components
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- This section sets defaults we can call to format our added buttons, images or containers. ONLY APPLIES TO HOMEPAGE -->
<head>
    <style type="text/css">
        html, body {
            height: 100%;
            width: 100%;
        }

        div#form-wrapper {
            position: absolute;
            box-sizing: border-box;
            padding: 20px;
            border-radius: 10px;
            margin: auto;
            background: rgba(255, 255, 255, 0.85);
            top: 50%;
            width: 40%;
            right: 0;
            left: 0;
        }

        div#subnav-wrapper {
            position: absolute;
            box-sizing: border-box;
            padding: 20px;
            border-radius: 0px;
            margin: auto;
            background: rgba(60, 60, 60, 0.75);
            top: 75px;
            width: 100%;
            right: 0;
            left: 0;
        }

        div#text-wrapper {
            position: absolute;
            box-sizing: border-box;
            padding: 10px;
            border-radius: 0px;
            margin: auto;
            background: rgba(210, 210, 210, 0.70);
            top: 161px;
            width: 100%;
            right: 0;
            left: 0;
        }

        body {
            background-image: url('imgs/underwater.jpg');
            background-size: cover;
            background-attachment: fixed;
        }
    </style>
</head>

<div class="text-body">
    <div id="text-wrapper" style="text-align:left; vertical-align:middle">
        <h3>
            <b>FOR</b> the environmentally conscientious individual <b>WHO</b> wants access to information to help make greener choices in their seafood consumption,
            <b>THE Seafood Watch Guide</b> Simplified website is a simplified view of the guide that makes access to information readily available to anyone in the country.
            <b>UNLIKE</b> the pdf guides that require saving a file to a user's computer or printing a file to have on hand, like what is offered on the Monterey Bay Aquariums site,
            <b>OUR</b> product grants access to the guide and information quickly and easily online with a single click and no need to download or print a file.
        </h3>
    </div>
</div>


<!---This is the region select dropdown for navigating to the correct guide. Each dropdown option will link to a new page-->
<div id="form-wrapper" style="text-align:center; vertical-align:middle">
    <h2>Which guide would you like to view?</h2> <!---TODO: Add style to the text and center into one line-->
    <div class="btn-group">
        <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Select Region
        </button>
        <div class="dropdown-menu dropdown-menu-right">
            <button class="dropdown-item" type="button"><a class="nav-link text-dark" asp-area="" asp-page="/WestCoastGuide">West Coast</a></button>
            <button class="dropdown-item" type="button"><a class="nav-link text-dark" asp-area="" asp-page="/WestCoastGuide">Southwest</a></button>
            <button class="dropdown-item" type="button"><a class="nav-link text-dark" asp-area="" asp-page="/CentralGuide">Central</a></button>
            <button class="dropdown-item" type="button"><a class="nav-link text-dark" asp-area="" asp-page="/SoutheastGuide">Southeast</a></button>
            <button class="dropdown-item" type="button"><a class="nav-link text-dark" asp-area="" asp-page="/NortheastGuide">Northeast</a></button>
            <button class="dropdown-item" type="button"><a class="nav-link text-dark" asp-area="" asp-page="/HawaiiGuide">Hawai'i</a></button>
            <button class="dropdown-item" type="button"><a class="nav-link text-dark" asp-area="" asp-page="/NationalGuide">National</a></button>
        </div>
    </div>
</div>


<script src="_framework/blazor.server.js"></script>










